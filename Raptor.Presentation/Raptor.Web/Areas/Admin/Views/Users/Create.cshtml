@model UserViewModel
@{
    ViewBag.Title = "Add User";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h4 class="card-title text-bold">@Model.Title</h4>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-block">

                @using (Html.BeginForm(Model.Action, "Users", FormMethod.Post, new { @class = "form-horizontal" })) {
                    @Html.AntiForgeryToken()

                    <div class="row">
                        <div class="col-md-6">
                            @Html.ValidationMessageFor(m => m.FirstName, "", new { @class = "text-danger small" })
                            <div class="form-group-sm row">
                                @Html.LabelFor(m => m.FirstName, new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @Html.TextBoxFor(m => m.FirstName, "", new { @class = "form-control" })
                                </div>
                            </div>

                            @Html.ValidationMessageFor(m => m.MiddleName, "", new { @class = "text-danger small" })
                            <div class="form-group-sm row">
                                @Html.LabelFor(m => m.MiddleName, new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @Html.TextBoxFor(m => m.MiddleName, "", new { @class = "form-control" })
                                </div>
                            </div>

                            @Html.ValidationMessageFor(m => m.LastName, "", new { @class = "text-danger small" })
                            <div class="form-group-sm row">
                                @Html.LabelFor(m => m.LastName, new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @Html.TextBoxFor(m => m.LastName, "", new { @class = "form-control" })
                                </div>
                            </div>

                            @Html.ValidationMessageFor(m => m.EmailAddress, "", new { @class = "text-danger small" })
                            <div class="form-group-sm row">
                                @Html.LabelFor(m => m.EmailAddress, new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @Html.TextBoxFor(m => m.EmailAddress, "", new { @class = "form-control" })
                                </div>
                            </div>

                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small" })
                            <div class="form-group-sm row">
                                @Html.LabelFor(m => m.Password, new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @Html.TextBoxFor(m => m.Password, "", new { type = "password", @class = "form-control" })
                                </div>
                            </div>

                            @Html.ValidationMessageFor(m => m.RepeatPassword, "", new { @class = "text-danger small" })
                            <div class="form-group-sm row">
                                @Html.LabelFor(m => m.RepeatPassword, new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @Html.TextBoxFor(m => m.RepeatPassword, "", new { type = "password", @class = "form-control" })
                                </div>
                            </div>

                            @Html.ValidationMessageFor(m => m.IsBlocked, "", new { @class = "text-danger small" })
                            <div class="form-group-sm row">
                                @Html.LabelFor(m => m.IsBlocked, new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @Html.CheckBoxFor(m => m.IsBlocked)
                                </div>
                            </div>

                            @Html.ValidationMessageFor(m => m.IsDeleted, "", new { @class = "text-danger small" })
                            <div class="form-group-sm row">
                                @Html.LabelFor(m => m.IsDeleted, new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @Html.CheckBoxFor(m => m.IsDeleted)
                                </div>
                            </div>

                            @Html.ValidationMessageFor(m => m.IsEmailVerified, "", new { @class = "text-danger small" })
                            <div class="form-group-sm row">
                                @Html.LabelFor(m => m.IsEmailVerified, new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @Html.CheckBoxFor(m => m.IsEmailVerified)
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger small" })
                            <div class="form-group-sm row">
                                @Html.LabelFor(m => m.Username, new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @Html.TextBoxFor(m => m.Username, "", new { @class = "form-control" })
                                </div>
                            </div>

                            @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger small" })
                            <div class="form-group-sm row">
                                @Html.LabelFor(m => m.PhoneNumber, new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @Html.TextBoxFor(m => m.PhoneNumber, "", new { @class = "form-control" })
                                </div>
                            </div>

                            @Html.ValidationMessageFor(m => m.About, "", new { @class = "text-danger small" })
                            <div class="form-group-sm row">
                                @Html.LabelFor(m => m.About, new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @Html.TextAreaFor(m => m.MiddleName, new { @class = "form-control", rows = "4" })
                                </div>
                            </div>
                        </div>

                        <div class="margin-top-20 ml-auto">
                            <button class="btn btn-primary" type="submit">
                                <i class="fa fa-arrow-right position-left"></i>
                                Add User
                            </button>
                            <button class="btn btn-secondary">
                                <i class="fa fa-refresh position-left"></i>
                                Reset All Fields
                            </button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
