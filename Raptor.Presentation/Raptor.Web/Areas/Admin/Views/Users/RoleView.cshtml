@model RoleViewModel
@{
    ViewBag.Title = Model.Title;
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<h4 class="card-title text-bold">@Model.Title</h4>

@if (!ViewData.ModelState.IsValid) {
    <div class="alert alert-danger auth-box" role="alert">
        <span class="small">
            @Html.ValidationSummary()
        </span>
    </div>
}

@if (ViewBag.Status == "OK") {
    <div class="alert alert-success auth-box" role="alert">
        <span class="small">
            @ViewBag.Message
        </span>
    </div>
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-block">
                <form method="post" asp-controller="Users" asp-action="@Model.Action" class="form-horizontal">
                    <div class="row">
                        <div class="col-lg-8">
                            <span class="text-danger small" asp-validation-for="SystemKeyword"></span>
                            <div class="form-group row">
                                <label class="control-label col-md-4 text-bold" asp-for="SystemKeyword"></label>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" asp-for="SystemKeyword"/>
                                    <input type="number" asp-for="RoleId" class="d-none"/>
                                </div>
                            </div>

                            <span class="text-danger small" asp-validation-for="DisplayName"></span>
                            <div class="form-group row">
                                <label class="control-label col-md-4 text-bold" asp-for="DisplayName"></label>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" asp-for="DisplayName"/>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="margin-top-20 pull-right">
                        @if (Model.Action == "EditRole") {
                        <button class="btn btn-primary" type="submit">
                            <i class="fa fa-refresh position-left"></i>
                            Save Changes
                        </button>
                        }
                         else {
                        <button class="btn btn-primary" type="submit">
                            <i class="fa fa-arrow-right position-left"></i>
                            Create Role
                        </button>
                        }
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



