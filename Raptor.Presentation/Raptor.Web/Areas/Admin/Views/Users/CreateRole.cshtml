@model RoleViewModel
@{
    ViewBag.Title = "Create Role";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<h4 class="card-title text-bold">@Model.Title</h4>

@if (!ViewData.ModelState.IsValid) {
    <div class="alert alert-danger auth-box" role="alert">
        <span class="small">
            @Html.ValidationSummary()
        </span>
    </div>
}

@if (ViewBag.Status == "OK") {
    <div class="alert alert-success auth-box" role="alert">
        <span class="small">
            @ViewBag.Message
        </span>
    </div>
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-block">

                @using (Html.BeginForm(Model.Action, "Users", FormMethod.Post, new { @class = "form-horizontal" })) {
                    @Html.AntiForgeryToken()

                    <div class="row">
                        <div class="col-lg-8">
                            @Html.ValidationMessageFor(m => m.SystemKeyword, "", new { @class = "text-danger small" })
                            <div class="form-group-sm row">
                                @Html.LabelFor(m => m.SystemKeyword, new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @Html.TextBoxFor(m => m.SystemKeyword, "", new { @class = "form-control" })
                                </div>
                            </div>

                            @Html.ValidationMessageFor(m => m.DisplayName, "", new { @class = "text-danger small" })
                            <div class="form-group-sm row">
                                @Html.LabelFor(m => m.DisplayName, new { @class = "control-label col-md-4" })
                                <div class="col-md-8">
                                    @Html.TextBoxFor(m => m.DisplayName, "", new { @class = "form-control" })
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="margin-top-20 pull-right">
                        <button class="btn btn-primary" type="submit">
                            <i class="fa fa-arrow-right position-left"></i>
                            Create Role
                        </button>
                        <button class="btn btn-secondary">
                            <i class="fa fa-refresh position-left"></i>
                            Reset All Fields
                        </button>
                    </div>
                }
            </div>
        </div>
    </div>
</div>



