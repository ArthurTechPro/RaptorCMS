@model IEnumerable<ActivityLog>
@{
    ViewBag.Title = "Account Activity";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12">
        <h4 class="card-title text-bold">Recent Account Activity</h4>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-block">
                <table class="table-striped table-hover datatable">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Comment</th>
                            <th>Date</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var activityLog in Model) {
                            <tr>
                                <td>@activityLog.ActivityLogId</td>
                                <td>@activityLog.Comment</td>
                                <td>@activityLog.DateCreatedUtc.ToString("MMM dd, yyyy hh:mm tt")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script type="text/javascript" src="~/admin-theme/lib/js/jquery.dataTables.min.js"></script>
    <script type="text/javascript" src="~/admin-theme/assets/js/pages_datatables.min.js"></script>
}

@section styles {
    <link rel="stylesheet" href="~/admin-theme/lib/css/jquery.dataTables.min.css">
}

