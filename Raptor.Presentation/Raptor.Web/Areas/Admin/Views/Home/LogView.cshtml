@model Log
@{
    ViewBag.Title = "View Log Entry";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-lg-6">
        <h4 class="text-bold">View Log Entry</h4>
    </div>
    
    <div class="col-lg-6">
        <a href="@Url.Action("logs", "home", new {area = "admin"})" class="btn btn-primary pull-right">
            <i class="fa fa-arrow-left position-left"></i>
            Back to logs
        </a>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-block">
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group row">
                            <label class="control-label col-md-3 text-bold">Log ID</label>
                            <div class="col-md-9">
                                @Model.LogId
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="control-label col-md-3 text-bold">Log Level</label>
                            <div class="col-md-9">
                                @Model.LogLevel.ToString()
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="control-label col-md-3 text-bold">Short Message</label>
                            <div class="col-md-9">
                                @Model.ShortMessage
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="control-label col-md-3 text-bold">Full Message</label>
                            <div class="col-md-9">
                                <textarea readonly="readonly" class="form-control" rows="10">
                                    @Model.FullMessage
                                </textarea>
                            </div>
                        </div>

                        <div class="form-group row">
                            <label class="control-label col-md-3 text-bold">Date Created</label>
                            <div class="col-md-9">
                                @Model.DateCreatedUtc.ToString("MMMM dd, yyyy HH:mm:ss")
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>