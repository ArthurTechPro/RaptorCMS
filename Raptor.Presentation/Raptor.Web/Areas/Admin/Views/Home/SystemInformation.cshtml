@model SystemInfoViewModel
@{
    ViewBag.Title = "System Information";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h4 class="card-title text-bold">System Information</h4>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-block">
                <form class="form-horizontal">
                    <div class="form-group-sm row">
                        <label class="text-bold control-label col-md-3">
                            RaptorCMS version
                        </label>

                        <span class="col-md-9">
                            @Model.Version
                        </span>
                    </div>

                    <div class="form-group-sm row">
                        <label class="text-bold control-label col-md-3">
                            Operating System
                        </label>

                        <span class="col-md-9">
                            @Model.OperatingSystem
                        </span>
                    </div>

                    <div class="form-group-sm row">
                        <label class="text-bold control-label col-md-3">
                            ASP.NET version
                        </label>

                        <span class="col-md-9">
                            @Model.AspNetVersion
                        </span>
                    </div>

                    <div class="form-group-sm row">
                        <label class="text-bold control-label col-md-3">
                            Server Time Zone
                        </label>

                        <span class="col-md-9">
                            @Model.ServerTimeZone
                        </span>
                    </div>

                    <div class="form-group-sm row">
                        <label class="text-bold control-label col-md-3">
                            Server Local Time
                        </label>

                        <span class="col-md-9">
                            @Model.LocalTimeZone
                        </span>
                    </div>

                    <div class="form-group-sm row">
                        <label class="text-bold control-label col-md-3">
                            Host
                        </label>

                        <span class="col-md-9">
                            @Model.Host
                        </span>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
