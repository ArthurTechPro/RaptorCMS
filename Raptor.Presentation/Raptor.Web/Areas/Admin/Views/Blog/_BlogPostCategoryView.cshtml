@model BlogPostCategoryViewModel

<form asp-controller="Blog" asp-action="@Model.PostAction" method="post" id="categoryForm">
    <div class="form-group">
        <span asp-validation-for="Name" class="text-danger small"></span>
        <label asp-for="Name" class="text-bold small"></label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>

    <div class="form-group">
        <span asp-validation-for="Slug" class="text-danger small"></span>
        <label asp-for="Slug" class="text-bold small"></label>
        <input type="text" asp-for="Slug" class="form-control" />
    </div>

    <div class="form-group">
        <span asp-validation-for="Description" class="text-danger small"></span>
        <label asp-for="Description" class="text-bold small"></label>
        <textarea asp-for="Description" rows="5" class="form-control"></textarea>
        <input type="number" asp-for="CategoryId" class="d-none" />
    </div>

    <div class="form-group">
        <div class="pull-right">
            @if (Model.PostAction != "categories") {
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-refresh position-left"></i>
                    Update Category
                </button>
            }
            else {
                <button type="submit" class="btn btn-primary">
                    <i class="fa fa-plus position-left"></i>
                    Add Category
                </button>
            }
        </div>
    </div>
</form>