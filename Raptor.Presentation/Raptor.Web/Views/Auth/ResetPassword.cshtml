@using Microsoft.AspNetCore.Http
@model ResetPasswordViewModel
@{
    ViewBag.Title = "Reset Password";
    Layout = "~/Views/Shared/_LoginPartial.cshtml";
}

<div class="row h-100">
    <div class="col-lg-12">
        <div class="login card auth-box mx-auto my-auto">
            <div class="card-block text-center">
                <div class="user-icon">
                    <i class="fa fa-key"></i>
                </div>

                <h4 class="text-light">Reset Password</h4>

                @if (!ViewData.ModelState.IsValid) {
                    <div class="alert alert-danger auth-box mx-auto my-auto" role="alert">
                        <div asp-validation-summary="ModelOnly" class="small"></div>
                    </div>
                }

                @if (ViewBag.Status == "OK") {
                    <div class="alert alert-success auth-box mx-auto my-auto" role="alert">
                        <span class="small">
                            @ViewBag.Message
                        </span>
                    </div>
                }

                <form asp-controller="Auth" asp-action="ResetPassword" method="post">
                    <div class="user-details">
                        <span asp-validation-for="Password" class="text-danger small pull-left"></span>
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon" id="basic-addon1">
                                    <i class="fa fa-user-o"></i>
                                </span>

                                <input type="password" class="form-control" asp-for="Password" placeholder="Password" />
                            </div>
                        </div>


                        <span asp-validation-for="RepeatPassword" class="text-danger small pull-left"></span>
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon" id="basic-addon1">
                                    <i class="fa fa-key"></i>
                                </span>

                                <input type="password" asp-for="RepeatPassword" class="form-control" placeholder="Repeat Password" />
                                <input type="text" value="@Context.Request.Query["link"]" asp-for="Link" class="d-none" />
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg btn-block">Reset</button>

                    <div class="user-links">
                        <a href="@Url.Action("login", "auth")" clas class="pull-left">Back to Login</a>
                        <a href="@Url.Action("register", "auth")" clas class="pull-right">Register</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


