@model ResetPasswordViewModel
@{
    ViewBag.Title = "Reset Password";
    Layout = "~/Views/Shared/_LoginPartial.cshtml";
}

<div class="row h-100">
    <div class="col-lg-12">
        <div class="login card auth-box mx-auto my-auto">
            <div class="card-block text-center">
                <div class="user-icon">
                    <i class="fa fa-key"></i>
                </div>

                <h4 class="text-light">Reset Password</h4>

                @if (!ViewData.ModelState.IsValid) {
                    <div class="alert alert-danger auth-box mx-auto my-auto" role="alert">
                        <span class="small">
                            @Html.ValidationSummary()
                        </span>
                    </div>
                }
                
                @if (ViewBag.Status == "OK") {
                    <div class="alert alert-success auth-box mx-auto my-auto" role="alert">
                        <span class="small">
                            Your passsword has been updated successfully.
                        </span>
                    </div>
                }

                @using (Html.BeginForm("ResetPassword", "Auth", FormMethod.Post)) {
                    @Html.AntiForgeryToken()

                    <div class="user-details">
                        @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small pull-left" })
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon" id="basic-addon1">
                                    <i class="fa fa-user-o"></i>
                                </span>
                                @Html.TextBoxFor(m => m.Password, new { type = "password", @class = "form-control", placeholder = "Enter Password" })
                            </div>
                        </div>


                        @Html.ValidationMessageFor(m => m.RepeatPassword, "", new { @class = "text-danger small pull-left" })
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon" id="basic-addon1">
                                    <i class="fa fa-key"></i>
                                </span>
                                @Html.TextBoxFor(m => m.RepeatPassword, new { type = "password", @class = "form-control", placeholder = "Repeat Password" })
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg btn-block">Reset</button>

                    <div class="user-links">
                        <a href="#" class="pull-left">Back to Login</a>
                        <a href="#" class="pull-right">Register</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>


