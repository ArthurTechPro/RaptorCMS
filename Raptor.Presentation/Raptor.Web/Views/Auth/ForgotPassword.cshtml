@model ForgotPasswordViewModel
@{
    ViewData["Title"] = "Forgot Password";
    Layout = "~/Views/Shared/_LoginPartial.cshtml";
}



<div class="row h-100">
    <div class="col-lg-12">
        <div class="login card auth-box mx-auto my-auto">
            <div class="card-block text-center">
                <div class="user-icon">
                    <i class="fa fa-key"></i>
                </div>

                <h4 class="text-light">Forgot Password</h4>

                @if (!ViewData.ModelState.IsValid) {
                    <div class="alert alert-danger auth-box mx-auto my-auto" role="alert">
                        <span class="small">
                            @Html.ValidationSummary()
                        </span>
                    </div>
                }
                
                @if (ViewBag.Status = "OK") {
                    <div class="alert alert-success auth-box mx-auto my-auto" role="alert">
                        <span class="small">
                           An email has been sent to your email address. Follow the instructions mentioned in it.
                        </span>
                    </div>
                }

                @using (Html.BeginForm("ForgotPassword", "Auth", FormMethod.Post)) {
                    @Html.AntiForgeryToken()

                    <div class="user-details">
                        @Html.ValidationMessageFor(m => m.EmailAddress)
                        <div class="form-group">
                            <div class="input-group">
                                <span class="input-group-addon" id="basic-addon1">
                                    <i class="fa fa-user-o"></i>
                                </span>
                                @Html.TextBoxFor(m => m.EmailAddress, new { @class = "form-control", placeholder = "Email Address" })
                            </div>
                        </div>
                    </div>

                    <button type="submit" class="btn btn-primary btn-lg btn-block">Send Email</button>

                    <div class="user-links">
                        <a href="#" class="pull-left">Back to Login</a>
                        <a href="#" class="pull-right">Register</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>